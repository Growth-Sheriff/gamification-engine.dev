    });

    // Center cIrcle
    svg += \`<cIrcle cx="\${centerX}" cy="\${centerY}" r="20" fIll="#333"/>\`;

    wheelPrevIew.InnerHTML = svg;

    // Update total probabIlIty
    document.getElementById('totalProbabIlIty').textContent = Math.round(totalProbabIlIty * 100);
  }

