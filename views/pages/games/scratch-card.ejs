<%- include('../../layouts/admin', { body: `

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">
      <i class="ti ti-ticket me-2"></i>
      Scratch Card
    </h4>
    <p class="text-muted mb-0">Kazı kazan ayarlarını yapılandırın</p>
  </div>
  <div class="d-flex gap-2">
    <button type="button" class="btn btn-primary" id="saveBtn">
      <i class="ti ti-device-floppy me-1"></i> Kaydet
    </button>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Genel Ayarlar</h5>
      </div>
      <div class="card-body">
        <form id="gameSettingsForm">
          <input type="hidden" name="gameId" value="${ typeof game !== 'undefined' ? game.id : '' }">

          <div class="mb-3">
            <label class="form-label">Oyun Adı</label>
            <input type="text" class="form-control" name="name" value="${ typeof game !== 'undefined' ? game.name : 'Kazı Kazan' }">
          </div>

          <div class="mb-3">
            <label class="form-label">Durum</label>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" name="isActive" id="isActive" ${ typeof game !== 'undefined' && game.isActive ? 'checked' : '' }>
              <label class="form-check-label" for="isActive">Aktif</label>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label">Tetikleyici</label>
              <select class="form-select" name="trigger">
                <option value="PAGE_LOAD">Sayfa Yüklendiğinde</option>
                <option value="TIME_ON_PAGE" selected>X Saniye Sonra</option>
                <option value="SCROLL_DEPTH">%X Scroll Sonrası</option>
                <option value="EXIT_INTENT">Çıkış Niyetinde</option>
              </select>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label">Değer (ms)</label>
              <input type="number" class="form-control" name="triggerValue" value="${ typeof game !== 'undefined' ? game.triggerValue : 5000 }">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Önizleme</h5>
      </div>
      <div class="card-body text-center">
        <div class="scratch-preview" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 12px; padding: 40px 20px; color: white;">
          <i class="ti ti-ticket" style="font-size: 3rem; margin-bottom: 1rem;"></i>
          <h5>Kazı Kazan!</h5>
          <p class="mb-0 opacity-75">Sürprizini görmek için kazı</p>
        </div>
      </div>
    </div>
  </div>
</div>

`, active: 'scratch-card' }) %>

