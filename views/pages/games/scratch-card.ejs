<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Scratch Card - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
  <style>
    .segment-item { background: var(--card-bg); border: 1px solid var(--border-color); border-radius: var(--radius-soft); padding: 1rem; margin-bottom: 0.75rem; }
    .segment-item:hover { box-shadow: var(--shadow-soft); }
    .segment-color { width: 24px; height: 24px; border-radius: 50%; border: 2px solid #fff; box-shadow: 0 0 0 1px #ddd; }
    .scratch-preview { width: 280px; height: 180px; margin: 0 auto; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 16px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 1.5rem; box-shadow: 0 10px 40px rgba(102, 126, 234, 0.3); position: relative; overflow: hidden; }
    .scratch-preview::before { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, rgba(255,255,255,0.2), transparent); }
    .scratch-cover { position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, #c0c0c0, #a0a0a0); display: flex; align-items: center; justify-content: center; cursor: pointer; transition: opacity 0.5s; }
    .scratch-cover:hover { opacity: 0.9; }
    .scratch-cover span { font-size: 1.2rem; color: #333; }
  </style>
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'scratch-card' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1"><i class="ti ti-ticket me-2"></i>Scratch Card</h4>
                <p class="text-muted mb-0">Kazi kazan oyun ayarlari</p>
              </div>
              <div class="d-flex gap-2">
                <button type="button" class="btn btn-primary" onclick="saveGame()">
                  <i class="ti ti-device-floppy me-1"></i>Kaydet
                </button>
              </div>
            </div>

            <div class="row g-4">
              <!-- Sol Panel: Ayarlar -->
              <div class="col-lg-7">
                <!-- Genel Ayarlar -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-settings me-2"></i>Genel Ayarlar</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-8">
                        <label class="form-label">Oyun Adi</label>
                        <input type="text" class="form-control" id="gameName" value="<%= typeof game !== 'undefined' && game ? game.name : 'Kazi Kazan' %>">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Durum</label>
                        <div class="form-check form-switch mt-2">
                          <input class="form-check-input" type="checkbox" id="gameActive" <%= typeof game !== 'undefined' && game && game.isActive ? 'checked' : '' %>>
                          <label class="form-check-label" for="gameActive">Aktif</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Tetikleyici -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-click me-2"></i>Tetikleyici</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label class="form-label">Tetikleme Tipi</label>
                        <select class="form-select" id="triggerType">
                          <option value="TIME_ON_PAGE" <%= typeof game !== 'undefined' && game && game.trigger === 'TIME_ON_PAGE' ? 'selected' : '' %>>Zaman</option>
                          <option value="SCROLL_DEPTH" <%= typeof game !== 'undefined' && game && game.trigger === 'SCROLL_DEPTH' ? 'selected' : '' %>>Scroll</option>
                          <option value="EXIT_INTENT" <%= typeof game !== 'undefined' && game && game.trigger === 'EXIT_INTENT' ? 'selected' : '' %>>Cikis Niyeti</option>
                          <option value="PAGE_LOAD" <%= typeof game !== 'undefined' && game && game.trigger === 'PAGE_LOAD' ? 'selected' : '' %>>Sayfa Yuklendiginde</option>
                        </select>
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Deger (ms veya %)</label>
                        <input type="number" class="form-control" id="triggerValue" value="<%= typeof game !== 'undefined' && game ? game.triggerValue : 5000 %>">
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Oduller -->
                <div class="card">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="ti ti-gift me-2"></i>Oduller</h5>
                    <button type="button" class="btn btn-sm btn-primary" onclick="addSegment()">
                      <i class="ti ti-plus me-1"></i>Odul Ekle
                    </button>
                  </div>
                  <div class="card-body">
                    <div id="segmentsList">
                      <% if (typeof game !== 'undefined' && game && game.segments && game.segments.length > 0) { %>
                        <% game.segments.forEach(function(seg, idx) { %>
                          <div class="segment-item" data-id="<%= seg.id %>">
                            <div class="d-flex align-items-center gap-3">
                              <input type="color" class="segment-color" value="<%= seg.color %>">
                              <div class="flex-grow-1">
                                <input type="text" class="form-control form-control-sm mb-2" value="<%= seg.label %>" placeholder="Etiket">
                                <div class="row g-2">
                                  <div class="col-5">
                                    <select class="form-select form-select-sm">
                                      <option value="PERCENTAGE" <%= seg.type === 'PERCENTAGE' ? 'selected' : '' %>>% Indirim</option>
                                      <option value="FIXED_AMOUNT" <%= seg.type === 'FIXED_AMOUNT' ? 'selected' : '' %>>Sabit Tutar</option>
                                      <option value="FREE_SHIPPING" <%= seg.type === 'FREE_SHIPPING' ? 'selected' : '' %>>Ucretsiz Kargo</option>
                                      <option value="NO_PRIZE" <%= seg.type === 'NO_PRIZE' ? 'selected' : '' %>>Odul Yok</option>
                                    </select>
                                  </div>
                                  <div class="col-3">
                                    <input type="number" class="form-control form-control-sm" value="<%= seg.value %>" placeholder="Deger">
                                  </div>
                                  <div class="col-3">
                                    <input type="number" class="form-control form-control-sm" value="<%= Math.round(seg.probability * 100) %>" placeholder="%" title="Olasilik %">
                                  </div>
                                  <div class="col-1">
                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSegment(this)">
                                      <i class="ti ti-trash"></i>
                                    </button>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% }); %>
                      <% } else { %>
                        <div class="segment-item">
                          <div class="d-flex align-items-center gap-3">
                            <input type="color" class="segment-color" value="#7367f0">
                            <div class="flex-grow-1">
                              <input type="text" class="form-control form-control-sm mb-2" value="%10 Indirim" placeholder="Etiket">
                              <div class="row g-2">
                                <div class="col-5"><select class="form-select form-select-sm"><option value="PERCENTAGE" selected>% Indirim</option><option value="FIXED_AMOUNT">Sabit Tutar</option><option value="FREE_SHIPPING">Ucretsiz Kargo</option><option value="NO_PRIZE">Odul Yok</option></select></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="10" placeholder="Deger"></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="40" placeholder="%"></div>
                                <div class="col-1"><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSegment(this)"><i class="ti ti-trash"></i></button></div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="segment-item">
                          <div class="d-flex align-items-center gap-3">
                            <input type="color" class="segment-color" value="#ea5455">
                            <div class="flex-grow-1">
                              <input type="text" class="form-control form-control-sm mb-2" value="Sansli Degilsin" placeholder="Etiket">
                              <div class="row g-2">
                                <div class="col-5"><select class="form-select form-select-sm"><option value="PERCENTAGE">% Indirim</option><option value="FIXED_AMOUNT">Sabit Tutar</option><option value="FREE_SHIPPING">Ucretsiz Kargo</option><option value="NO_PRIZE" selected>Odul Yok</option></select></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="0" placeholder="Deger"></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="30" placeholder="%"></div>
                                <div class="col-1"><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSegment(this)"><i class="ti ti-trash"></i></button></div>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="segment-item">
                          <div class="d-flex align-items-center gap-3">
                            <input type="color" class="segment-color" value="#28c76f">
                            <div class="flex-grow-1">
                              <input type="text" class="form-control form-control-sm mb-2" value="%20 Indirim" placeholder="Etiket">
                              <div class="row g-2">
                                <div class="col-5"><select class="form-select form-select-sm"><option value="PERCENTAGE" selected>% Indirim</option><option value="FIXED_AMOUNT">Sabit Tutar</option><option value="FREE_SHIPPING">Ucretsiz Kargo</option><option value="NO_PRIZE">Odul Yok</option></select></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="20" placeholder="Deger"></div>
                                <div class="col-3"><input type="number" class="form-control form-control-sm" value="30" placeholder="%"></div>
                                <div class="col-1"><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSegment(this)"><i class="ti ti-trash"></i></button></div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    </div>
                    <div class="alert alert-soft-info mt-3 mb-0">
                      <i class="ti ti-info-circle me-2"></i>
                      <small>Olasiliklarin toplami 100 olmali.</small>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Sag Panel: Onizleme -->
              <div class="col-lg-5">
                <div class="card position-sticky" style="top: 1rem;">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-eye me-2"></i>Onizleme</h5>
                  </div>
                  <div class="card-body text-center">
                    <div class="scratch-preview mb-4">
                      <div class="scratch-cover" onclick="revealPrize()">
                        <span>🎫 KAZI!</span>
                      </div>
                      <span id="prizeText">%10 INDIRIM!</span>
                    </div>
                    <p class="text-muted mb-0">Kazimak icin tiklayin</p>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    const gameId = '<%= typeof game !== "undefined" && game ? game.id : "" %>';

    function getSegmentsFromUI() {
      const segments = [];
      document.querySelectorAll('.segment-item').forEach(item => {
        const color = item.querySelector('.segment-color').value;
        const label = item.querySelector('input[type="text"]').value;
        const type = item.querySelector('select').value;
        const value = parseFloat(item.querySelectorAll('input[type="number"]')[0].value) || 0;
        const probability = parseFloat(item.querySelectorAll('input[type="number"]')[1].value) / 100 || 0;
        segments.push({ color, label, type, value, probability });
      });
      return segments;
    }

    function addSegment() {
      const colors = ['#7367f0', '#28c76f', '#ff9f43', '#ea5455', '#00cfe8'];
      const randomColor = colors[Math.floor(Math.random() * colors.length)];

      const html = `
        <div class="segment-item">
          <div class="d-flex align-items-center gap-3">
            <input type="color" class="segment-color" value="${randomColor}">
            <div class="flex-grow-1">
              <input type="text" class="form-control form-control-sm mb-2" value="Yeni Odul" placeholder="Etiket">
              <div class="row g-2">
                <div class="col-5"><select class="form-select form-select-sm"><option value="PERCENTAGE">% Indirim</option><option value="FIXED_AMOUNT">Sabit Tutar</option><option value="FREE_SHIPPING">Ucretsiz Kargo</option><option value="NO_PRIZE">Odul Yok</option></select></div>
                <div class="col-3"><input type="number" class="form-control form-control-sm" value="10" placeholder="Deger"></div>
                <div class="col-3"><input type="number" class="form-control form-control-sm" value="10" placeholder="%"></div>
                <div class="col-1"><button type="button" class="btn btn-sm btn-outline-danger" onclick="removeSegment(this)"><i class="ti ti-trash"></i></button></div>
              </div>
            </div>
          </div>
        </div>`;
      document.getElementById('segmentsList').insertAdjacentHTML('beforeend', html);
    }

    function removeSegment(btn) {
      if (document.querySelectorAll('.segment-item').length <= 1) {
        showToast('En az 1 odul olmali!', 'warning');
        return;
      }
      btn.closest('.segment-item').remove();
    }

    function revealPrize() {
      const cover = document.querySelector('.scratch-cover');
      cover.style.opacity = '0';
      setTimeout(() => cover.style.display = 'none', 500);

      const segments = getSegmentsFromUI();
      const prizes = segments.filter(s => s.type !== 'NO_PRIZE');
      if (prizes.length > 0) {
        const prize = prizes[Math.floor(Math.random() * prizes.length)];
        document.getElementById('prizeText').textContent = prize.label;
      }
    }

    async function saveGame() {
      const data = {
        name: document.getElementById('gameName').value,
        isActive: document.getElementById('gameActive').checked,
        trigger: document.getElementById('triggerType').value,
        triggerValue: parseInt(document.getElementById('triggerValue').value),
        segments: getSegmentsFromUI(),
      };

      try {
        if (gameId) {
          await Games.save(gameId, 'SCRATCH_CARD', data);
        } else {
          await api.post('/api/games', { ...data, type: 'SCRATCH_CARD' });
          showToast('Oyun olusturuldu!', 'success');
        }
      } catch (error) {
        console.error(error);
      }
    }
  </script>
</body>
</html>

