<%- include('../../layouts/admin', { body: `

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">
      <i class="ti ti-window me-2"></i>
      Popup
    </h4>
    <p class="text-muted mb-0">Popup ayarlarını yapılandırın</p>
  </div>
  <div class="d-flex gap-2">
    <button type="button" class="btn btn-primary" id="saveBtn">
      <i class="ti ti-device-floppy me-1"></i> Kaydet
    </button>
  </div>
</div>

<div class="row g-4">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Genel Ayarlar</h5>
      </div>
      <div class="card-body">
        <form id="gameSettingsForm">
          <input type="hidden" name="gameId" value="${ typeof game !== 'undefined' ? game.id : '' }">

          <div class="mb-3">
            <label class="form-label">Popup Adı</label>
            <input type="text" class="form-control" name="name" value="${ typeof game !== 'undefined' ? game.name : 'İndirim Popup' }">
          </div>

          <div class="mb-3">
            <label class="form-label">Durum</label>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" name="isActive" id="isActive" ${ typeof game !== 'undefined' && game.isActive ? 'checked' : '' }>
              <label class="form-check-label" for="isActive">Aktif</label>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Tetikleyici</label>
            <select class="form-select" name="trigger">
              <option value="PAGE_LOAD">Sayfa Yüklendiğinde</option>
              <option value="TIME_ON_PAGE">X Saniye Sonra</option>
              <option value="SCROLL_DEPTH">%X Scroll Sonrası</option>
              <option value="EXIT_INTENT" selected>Çıkış Niyetinde</option>
            </select>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Önizleme</h5>
      </div>
      <div class="card-body text-center">
        <div class="popup-preview" style="background: white; border-radius: 12px; padding: 30px; box-shadow: 0 10px 40px rgba(0,0,0,0.15);">
          <i class="ti ti-gift" style="font-size: 3rem; color: #7367f0; margin-bottom: 1rem;"></i>
          <h5>Özel Teklif!</h5>
          <p class="text-muted">Ayrılmadan önce sana özel indirim</p>
          <button class="btn btn-primary">İndirimi Al</button>
        </div>
      </div>
    </div>
  </div>
</div>

`, active: 'popup' }) %>

