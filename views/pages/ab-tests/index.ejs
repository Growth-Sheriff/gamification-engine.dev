<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>A/B Testleri - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'ab-tests' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1"><i class="ti ti-ab me-2"></i>A/B Testleri</h4>
                <p class="text-muted mb-0">Farkli varyantlari test edin ve en iyisini secin</p>
              </div>
              <a href="/ab-tests/new" class="btn btn-primary">
                <i class="ti ti-plus me-1"></i>Yeni Test
              </a>
            </div>

            <!-- Tests Grid -->
            <div class="row g-4">
              <% if (typeof tests !== 'undefined' && tests.length > 0) { %>
                <% tests.forEach(function(test) { %>
                  <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                      <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><%= test.name %></h6>
                        <span class="badge <%= test.isActive ? 'bg-success' : 'bg-secondary' %>">
                          <%= test.isActive ? 'Aktif' : 'Pasif' %>
                        </span>
                      </div>
                      <div class="card-body">
                        <p class="text-muted small mb-3"><%= test.description || 'Aciklama yok' %></p>

                        <div class="mb-3">
                          <small class="text-muted">Varyantlar</small>
                          <div class="d-flex gap-2 mt-1">
                            <% test.variants.forEach(function(v) { %>
                              <span class="badge bg-label-<%= v.isControl ? 'primary' : 'warning' %>">
                                <%= v.name %>
                              </span>
                            <% }); %>
                          </div>
                        </div>

                        <div class="row g-2 text-center">
                          <div class="col-4">
                            <div class="border rounded p-2">
                              <div class="fw-bold"><%= test.variants.reduce((a, v) => a + v.impressions, 0) %></div>
                              <small class="text-muted">Gosterim</small>
                            </div>
                          </div>
                          <div class="col-4">
                            <div class="border rounded p-2">
                              <div class="fw-bold"><%= test.variants.reduce((a, v) => a + v.conversions, 0) %></div>
                              <small class="text-muted">Donusum</small>
                            </div>
                          </div>
                          <div class="col-4">
                            <div class="border rounded p-2">
                              <%
                                const totalImpressions = test.variants.reduce((a, v) => a + v.impressions, 0);
                                const totalConversions = test.variants.reduce((a, v) => a + v.conversions, 0);
                                const rate = totalImpressions > 0 ? Math.round((totalConversions / totalImpressions) * 100) : 0;
                              %>
                              <div class="fw-bold"><%= rate %>%</div>
                              <small class="text-muted">Oran</small>
                            </div>
                          </div>
                        </div>

                        <% if (test.winner) { %>
                          <div class="alert alert-success mt-3 mb-0 py-2">
                            <i class="ti ti-trophy me-1"></i>Kazanan: <%= test.winner %>
                          </div>
                        <% } %>
                      </div>
                      <div class="card-footer">
                        <a href="/ab-tests/<%= test.id %>" class="btn btn-sm btn-outline-primary">
                          <i class="ti ti-eye me-1"></i>Detay
                        </a>
                        <button class="btn btn-sm btn-outline-secondary" onclick="toggleTest('<%= test.id %>', <%= !test.isActive %>)">
                          <i class="ti ti-<%= test.isActive ? 'player-pause' : 'player-play' %>"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="col-12">
                  <div class="card">
                    <div class="card-body text-center py-5">
                      <i class="ti ti-ab mb-3" style="font-size: 4rem; color: #ccc;"></i>
                      <h5>Henuz A/B test olusturulmami≈ü</h5>
                      <p class="text-muted mb-4">Farkli oyun ayarlarini test ederek en iyi performansi elde edin</p>
                      <a href="/ab-tests/new" class="btn btn-primary">
                        <i class="ti ti-plus me-1"></i>Ilk Testi Olustur
                      </a>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    async function toggleTest(testId, activate) {
      try {
        await api.put(`/api/ab-tests/${testId}`, { isActive: activate });
        showToast(activate ? 'Test aktif edildi!' : 'Test durduruldu!', 'success');
        location.reload();
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }
  </script>
</body>
</html>

