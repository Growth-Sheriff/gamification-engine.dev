<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Uyeler - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'loyalty' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/loyalty">Sadakat</a></li>
                    <li class="breadcrumb-item active">Uyeler</li>
                  </ol>
                </nav>
                <h4 class="mb-0 mt-2"><i class="ti ti-users me-2"></i>Sadakat Uyeleri</h4>
              </div>
              <button class="btn btn-outline-primary">
                <i class="ti ti-download me-1"></i>CSV Indir
              </button>
            </div>

            <!-- Table -->
            <div class="card">
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-modern mb-0">
                    <thead>
                      <tr>
                        <th>Uye</th>
                        <th>Puan</th>
                        <th>Seviye</th>
                        <th>Toplam Kazanim</th>
                        <th>Son Aktivite</th>
                        <th>Islem</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof members !== 'undefined' && members.length > 0) { %>
                        <% members.forEach(function(member) { %>
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                <div class="avatar avatar-sm me-2">
                                  <span class="avatar-initial rounded-circle bg-label-primary">
                                    <i class="ti ti-user"></i>
                                  </span>
                                </div>
                                <span><%= member.visitorId.substring(0, 12) %>...</span>
                              </div>
                            </td>
                            <td><strong><%= member.points.toLocaleString() %></strong></td>
                            <td>
                              <span class="badge" style="background: <%= member.currentTier === 'Platinum' ? '#E5E4E2' : member.currentTier === 'Gold' ? '#FFD700' : member.currentTier === 'Silver' ? '#C0C0C0' : '#CD7F32' %>; color: #333;">
                                <%= member.currentTier || 'Bronze' %>
                              </span>
                            </td>
                            <td><%= member.lifetimePoints.toLocaleString() %></td>
                            <td><%= member.updatedAt ? new Date(member.updatedAt).toLocaleDateString('tr-TR') : '-' %></td>
                            <td>
                              <button class="btn btn-sm btn-outline-primary" onclick="adjustPoints('<%= member.id %>')">
                                <i class="ti ti-edit"></i>
                              </button>
                            </td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center py-5">
                            <i class="ti ti-users-minus mb-3" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mb-0">Henuz uye yok</p>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <% if (typeof pagination !== 'undefined' && pagination.totalPages > 1) { %>
                <div class="card-footer">
                  <nav>
                    <ul class="pagination justify-content-center mb-0">
                      <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page - 1 %>">Onceki</a>
                      </li>
                      <li class="page-item active">
                        <span class="page-link"><%= pagination.page %> / <%= pagination.totalPages %></span>
                      </li>
                      <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page + 1 %>">Sonraki</a>
                      </li>
                    </ul>
                  </nav>
                </div>
              <% } %>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>

  <!-- Puan Ayarlama Modal -->
  <div class="modal fade" id="adjustModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="ti ti-coin me-2"></i>Puan Ayarla</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="adjustMemberId">
          <div class="mb-3">
            <label class="form-label">Mevcut Puan</label>
            <input type="text" class="form-control" id="currentPoints" readonly>
          </div>
          <div class="mb-3">
            <label class="form-label">Ekle/Cikar</label>
            <div class="input-group">
              <button class="btn btn-outline-danger" type="button" onclick="document.getElementById('adjustAmount').value = parseInt(document.getElementById('adjustAmount').value || 0) - 100">-100</button>
              <input type="number" class="form-control text-center" id="adjustAmount" value="0">
              <button class="btn btn-outline-success" type="button" onclick="document.getElementById('adjustAmount').value = parseInt(document.getElementById('adjustAmount').value || 0) + 100">+100</button>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Aciklama</label>
            <select class="form-select" id="adjustReason">
              <option value="Manuel duzeltme">Manuel duzeltme</option>
              <option value="Bonus puan">Bonus puan</option>
              <option value="Kampanya odulu">Kampanya odulu</option>
              <option value="Musteri sikayeti">Musteri sikayeti</option>
              <option value="Diger">Diger</option>
            </select>
          </div>
          <div id="adjustNote" class="alert alert-info d-none">
            <i class="ti ti-info-circle me-1"></i>
            <span id="adjustNoteText"></span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Iptal</button>
          <button type="button" class="btn btn-primary" onclick="submitAdjust()">
            <i class="ti ti-check me-1"></i>Onayla
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Islem Gecmisi Modal -->
  <div class="modal fade" id="historyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="ti ti-history me-2"></i>Islem Gecmisi</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Tarih</th>
                  <th>Islem</th>
                  <th>Puan</th>
                  <th>Aciklama</th>
                </tr>
              </thead>
              <tbody id="historyTableBody">
                <tr><td colspan="4" class="text-center">Yukleniyor...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let adjustModal, historyModal;

    document.addEventListener('DOMContentLoaded', function() {
      adjustModal = new bootstrap.Modal(document.getElementById('adjustModal'));
      historyModal = new bootstrap.Modal(document.getElementById('historyModal'));
    });

    function adjustPoints(memberId, currentPoints) {
      document.getElementById('adjustMemberId').value = memberId;
      document.getElementById('currentPoints').value = currentPoints.toLocaleString() + ' puan';
      document.getElementById('adjustAmount').value = 0;
      adjustModal.show();
    }

    document.getElementById('adjustAmount').addEventListener('input', function() {
      const amount = parseInt(this.value) || 0;
      const note = document.getElementById('adjustNote');
      const noteText = document.getElementById('adjustNoteText');

      if (amount !== 0) {
        note.classList.remove('d-none');
        if (amount > 0) {
          note.className = 'alert alert-success';
          noteText.textContent = `+${amount} puan eklenecek`;
        } else {
          note.className = 'alert alert-warning';
          noteText.textContent = `${amount} puan cikarilacak`;
        }
      } else {
        note.classList.add('d-none');
      }
    });

    async function submitAdjust() {
      const memberId = document.getElementById('adjustMemberId').value;
      const amount = parseInt(document.getElementById('adjustAmount').value);
      const reason = document.getElementById('adjustReason').value;

      if (amount === 0) {
        showToast('Lutfen bir miktar girin', 'warning');
        return;
      }

      try {
        await api.post(`/api/loyalty/members/${memberId}/adjust`, {
          points: amount,
          reason: reason
        });
        showToast('Puan guncellendi!', 'success');
        adjustModal.hide();
        location.reload();
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }

    async function showHistory(memberId) {
      document.getElementById('historyTableBody').innerHTML = '<tr><td colspan="4" class="text-center">Yukleniyor...</td></tr>';
      historyModal.show();

      try {
        const response = await api.get(`/api/loyalty/members/${memberId}/history`);
        const transactions = response.data || [];

        if (transactions.length === 0) {
          document.getElementById('historyTableBody').innerHTML = '<tr><td colspan="4" class="text-center text-muted">Islem gecmisi yok</td></tr>';
          return;
        }

        document.getElementById('historyTableBody').innerHTML = transactions.map(t => `
          <tr>
            <td>${new Date(t.createdAt).toLocaleString('tr-TR')}</td>
            <td><span class="badge ${getTypeBadge(t.type)}">${getTypeLabel(t.type)}</span></td>
            <td class="${t.points >= 0 ? 'text-success' : 'text-danger'}">${t.points >= 0 ? '+' : ''}${t.points}</td>
            <td>${t.description || '-'}</td>
          </tr>
        `).join('');
      } catch (error) {
        document.getElementById('historyTableBody').innerHTML = '<tr><td colspan="4" class="text-center text-danger">Hata olustu</td></tr>';
      }
    }

    function getTypeBadge(type) {
      const badges = {
        'PURCHASE': 'bg-success',
        'REDEEM': 'bg-warning',
        'ADMIN_ADJUST': 'bg-info',
        'REFERRAL': 'bg-primary',
        'SIGNUP': 'bg-secondary',
        'BIRTHDAY': 'bg-danger'
      };
      return badges[type] || 'bg-secondary';
    }

    function getTypeLabel(type) {
      const labels = {
        'PURCHASE': 'Satin Alma',
        'REDEEM': 'Harcama',
        'ADMIN_ADJUST': 'Admin',
        'REFERRAL': 'Davet',
        'SIGNUP': 'Kayit',
        'BIRTHDAY': 'Dogum Gunu'
      };
      return labels[type] || type;
    }
  </script>
</body>
</html>

