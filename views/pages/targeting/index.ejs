<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hedefleme Kurallari - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'targeting' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1"><i class="ti ti-target me-2"></i>Hedefleme Kurallari</h4>
                <p class="text-muted mb-0">Oyunlari belirli kitleye gosterin</p>
              </div>
              <a href="/targeting/new" class="btn btn-primary">
                <i class="ti ti-plus me-1"></i>Yeni Kural
              </a>
            </div>

            <!-- Info Alert -->
            <div class="alert alert-soft-info mb-4">
              <i class="ti ti-info-circle me-2"></i>
              <strong>OptiMonk tarzi hedefleme:</strong> Sayfa, cihaz, ziyaretci tipi, trafik kaynagi, sepet degeri ve zamana gore oyunlarinizi hedefleyin.
            </div>

            <!-- Rules Table -->
            <div class="card">
              <div class="card-body p-0">
                <div class="table-responsive">
                  <table class="table table-modern mb-0">
                    <thead>
                      <tr>
                        <th>Kural</th>
                        <th>Oyun</th>
                        <th>Hedef</th>
                        <th>Oncelik</th>
                        <th>Durum</th>
                        <th>Islem</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (typeof rules !== 'undefined' && rules.length > 0) { %>
                        <% rules.forEach(function(rule) { %>
                          <tr>
                            <td><strong><%= rule.name %></strong></td>
                            <td>
                              <% const game = games.find(g => g.id === rule.gameId); %>
                              <span class="badge bg-label-primary"><%= game ? game.name : '-' %></span>
                            </td>
                            <td>
                              <div class="d-flex flex-wrap gap-1">
                                <% if (rule.pageType && rule.pageType.length > 0) { %>
                                  <span class="badge bg-secondary" title="Sayfa tipi"><i class="ti ti-file me-1"></i><%= rule.pageType.length %></span>
                                <% } %>
                                <% if (rule.devices && rule.devices.length > 0) { %>
                                  <span class="badge bg-secondary" title="Cihaz"><i class="ti ti-device-mobile me-1"></i><%= rule.devices.length %></span>
                                <% } %>
                                <% if (rule.visitorType !== 'ALL') { %>
                                  <span class="badge bg-secondary" title="Ziyaretci"><i class="ti ti-user me-1"></i><%= rule.visitorType %></span>
                                <% } %>
                                <% if (rule.minCartValue || rule.maxCartValue) { %>
                                  <span class="badge bg-secondary" title="Sepet"><i class="ti ti-shopping-cart me-1"></i>Sepet</span>
                                <% } %>
                                <% if (rule.scheduleEnabled) { %>
                                  <span class="badge bg-secondary" title="Zaman"><i class="ti ti-clock me-1"></i>Zamanlama</span>
                                <% } %>
                              </div>
                            </td>
                            <td><span class="badge bg-label-dark"><%= rule.priority %></span></td>
                            <td>
                              <span class="badge <%= rule.isActive ? 'bg-success' : 'bg-secondary' %>">
                                <%= rule.isActive ? 'Aktif' : 'Pasif' %>
                              </span>
                            </td>
                            <td>
                              <a href="/targeting/<%= rule.id %>" class="btn btn-sm btn-outline-primary">
                                <i class="ti ti-edit"></i>
                              </a>
                              <button class="btn btn-sm btn-outline-danger" onclick="deleteRule('<%= rule.id %>')">
                                <i class="ti ti-trash"></i>
                              </button>
                            </td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center py-5">
                            <i class="ti ti-target-off mb-3" style="font-size: 3rem; color: #ccc;"></i>
                            <h5>Henuz hedefleme kurali yok</h5>
                            <p class="text-muted mb-4">Oyunlarinizi belirli kitlelere gostermek icin kural ekleyin</p>
                            <a href="/targeting/new" class="btn btn-primary">
                              <i class="ti ti-plus me-1"></i>Ilk Kurali Olustur
                            </a>
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    async function deleteRule(ruleId) {
      if (!confirm('Bu kurali silmek istediginize emin misiniz?')) return;
      try {
        await api.delete(`/api/targeting/${ruleId}`);
        showToast('Kural silindi!', 'success');
        location.reload();
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }
  </script>
</body>
</html>

