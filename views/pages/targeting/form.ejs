<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof rule !== 'undefined' && rule ? 'Kural Duzenle' : 'Yeni Hedefleme Kurali' %> - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'targeting' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/targeting">Hedefleme</a></li>
                    <li class="breadcrumb-item active"><%= typeof rule !== 'undefined' && rule ? rule.name : 'Yeni Kural' %></li>
                  </ol>
                </nav>
                <h4 class="mb-0 mt-2"><i class="ti ti-target me-2"></i><%= typeof rule !== 'undefined' && rule ? 'Hedefleme Kurali Duzenle' : 'Yeni Hedefleme Kurali' %></h4>
              </div>
              <div class="d-flex gap-2">
                <a href="/targeting" class="btn btn-outline-secondary">Geri</a>
                <button class="btn btn-primary" onclick="saveRule()">
                  <i class="ti ti-device-floppy me-1"></i>Kaydet
                </button>
              </div>
            </div>

            <div class="row g-4">
              <!-- Sol Panel -->
              <div class="col-lg-8">
                <!-- Genel -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-settings me-2"></i>Genel Ayarlar</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label class="form-label">Kural Adi</label>
                        <input type="text" class="form-control" id="ruleName" value="<%= typeof rule !== 'undefined' && rule ? rule.name : '' %>" required>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Oncelik</label>
                        <input type="number" class="form-control" id="rulePriority" value="<%= typeof rule !== 'undefined' && rule ? rule.priority : 0 %>" min="0">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Durum</label>
                        <div class="form-check form-switch mt-2">
                          <input class="form-check-input" type="checkbox" id="ruleActive" <%= typeof rule === 'undefined' || !rule || rule.isActive ? 'checked' : '' %>>
                          <label class="form-check-label" for="ruleActive">Aktif</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <label class="form-label">Oyun</label>
                        <select class="form-select" id="ruleGame" required>
                          <option value="">Oyun sec...</option>
                          <% if (typeof games !== 'undefined' && games.length > 0) { %>
                            <% games.forEach(function(game) { %>
                              <option value="<%= game.id %>" <%= typeof rule !== 'undefined' && rule && rule.gameId === game.id ? 'selected' : '' %>>
                                <%= game.name %> (<%= game.type %>)
                              </option>
                            <% }); %>
                          <% } %>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Sayfa Hedefleme -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-file me-2"></i>Sayfa Hedefleme</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label class="form-label">Sayfa Tipleri</label>
                      <div class="d-flex flex-wrap gap-2">
                        <% const pageTypes = ['index', 'product', 'collection', 'cart', 'page', 'search']; %>
                        <% pageTypes.forEach(function(pt) { %>
                          <div class="form-check">
                            <input class="form-check-input page-type-check" type="checkbox" value="<%= pt %>" id="pt_<%= pt %>"
                              <%= typeof rule !== 'undefined' && rule && rule.pageType && rule.pageType.includes(pt) ? 'checked' : '' %>>
                            <label class="form-check-label" for="pt_<%= pt %>"><%= pt %></label>
                          </div>
                        <% }); %>
                      </div>
                      <small class="text-muted">Bos = Tum sayfalar</small>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Spesifik URL'ler (satirla ayir)</label>
                      <textarea class="form-control" id="pageUrls" rows="2" placeholder="/collections/summer&#10;/products/tshirt"><%= typeof rule !== 'undefined' && rule && rule.pageUrls ? rule.pageUrls.join('\n') : '' %></textarea>
                    </div>
                    <div>
                      <label class="form-label">Haric Tutulan URL'ler</label>
                      <textarea class="form-control" id="excludeUrls" rows="2" placeholder="/cart&#10;/checkout"><%= typeof rule !== 'undefined' && rule && rule.excludeUrls ? rule.excludeUrls.join('\n') : '' %></textarea>
                    </div>
                  </div>
                </div>

                <!-- Cihaz & Ziyaretci -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-device-mobile me-2"></i>Cihaz & Ziyaretci</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label class="form-label">Cihazlar</label>
                        <div class="d-flex gap-3">
                          <div class="form-check">
                            <input class="form-check-input device-check" type="checkbox" value="desktop" id="dev_desktop"
                              <%= typeof rule !== 'undefined' && rule && rule.devices && rule.devices.includes('desktop') ? 'checked' : '' %>>
                            <label class="form-check-label" for="dev_desktop"><i class="ti ti-device-desktop me-1"></i>Desktop</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input device-check" type="checkbox" value="mobile" id="dev_mobile"
                              <%= typeof rule !== 'undefined' && rule && rule.devices && rule.devices.includes('mobile') ? 'checked' : '' %>>
                            <label class="form-check-label" for="dev_mobile"><i class="ti ti-device-mobile me-1"></i>Mobile</label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input device-check" type="checkbox" value="tablet" id="dev_tablet"
                              <%= typeof rule !== 'undefined' && rule && rule.devices && rule.devices.includes('tablet') ? 'checked' : '' %>>
                            <label class="form-check-label" for="dev_tablet"><i class="ti ti-device-tablet me-1"></i>Tablet</label>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Ziyaretci Tipi</label>
                        <select class="form-select" id="visitorType">
                          <option value="ALL" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'ALL' ? 'selected' : '' %>>Tum Ziyaretciler</option>
                          <option value="NEW" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'NEW' ? 'selected' : '' %>>Yeni Ziyaretciler</option>
                          <option value="RETURNING" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'RETURNING' ? 'selected' : '' %>>Geri Donenler</option>
                          <option value="CUSTOMERS" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'CUSTOMERS' ? 'selected' : '' %>>Musteriler</option>
                          <option value="NON_CUSTOMERS" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'NON_CUSTOMERS' ? 'selected' : '' %>>Musteri Olmayanlar</option>
                          <option value="LOGGED_IN" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'LOGGED_IN' ? 'selected' : '' %>>Giris Yapmis</option>
                          <option value="NOT_LOGGED_IN" <%= typeof rule !== 'undefined' && rule && rule.visitorType === 'NOT_LOGGED_IN' ? 'selected' : '' %>>Giris Yapmamis</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Trafik Kaynagi -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-share me-2"></i>Trafik Kaynagi</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label class="form-label">Kaynak Tipleri</label>
                      <div class="d-flex flex-wrap gap-3">
                        <% const sources = ['direct', 'organic', 'paid', 'social', 'email', 'referral']; %>
                        <% sources.forEach(function(src) { %>
                          <div class="form-check">
                            <input class="form-check-input source-check" type="checkbox" value="<%= src %>" id="src_<%= src %>"
                              <%= typeof rule !== 'undefined' && rule && rule.trafficSource && rule.trafficSource.includes(src) ? 'checked' : '' %>>
                            <label class="form-check-label" for="src_<%= src %>"><%= src %></label>
                          </div>
                        <% }); %>
                      </div>
                    </div>
                    <div class="row g-3">
                      <div class="col-md-4">
                        <label class="form-label">UTM Source</label>
                        <input type="text" class="form-control" id="utmSource" placeholder="facebook, google" value="<%= typeof rule !== 'undefined' && rule && rule.utmSource ? rule.utmSource.join(', ') : '' %>">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">UTM Medium</label>
                        <input type="text" class="form-control" id="utmMedium" placeholder="cpc, email" value="<%= typeof rule !== 'undefined' && rule && rule.utmMedium ? rule.utmMedium.join(', ') : '' %>">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">UTM Campaign</label>
                        <input type="text" class="form-control" id="utmCampaign" placeholder="summer_sale" value="<%= typeof rule !== 'undefined' && rule && rule.utmCampaign ? rule.utmCampaign.join(', ') : '' %>">
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Sepet Hedefleme -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-shopping-cart me-2"></i>Sepet Hedefleme</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-3">
                        <label class="form-label">Min. Sepet (TL)</label>
                        <input type="number" class="form-control" id="minCartValue" value="<%= typeof rule !== 'undefined' && rule && rule.minCartValue ? rule.minCartValue : '' %>" min="0" step="0.01">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Max. Sepet (TL)</label>
                        <input type="number" class="form-control" id="maxCartValue" value="<%= typeof rule !== 'undefined' && rule && rule.maxCartValue ? rule.maxCartValue : '' %>" min="0" step="0.01">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Min. Urun Sayisi</label>
                        <input type="number" class="form-control" id="minCartItems" value="<%= typeof rule !== 'undefined' && rule && rule.minCartItems ? rule.minCartItems : '' %>" min="0">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Max. Urun Sayisi</label>
                        <input type="number" class="form-control" id="maxCartItems" value="<%= typeof rule !== 'undefined' && rule && rule.maxCartItems ? rule.maxCartItems : '' %>" min="0">
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Zamanlama -->
                <div class="card">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="ti ti-clock me-2"></i>Zamanlama</h5>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="scheduleEnabled" <%= typeof rule !== 'undefined' && rule && rule.scheduleEnabled ? 'checked' : '' %>>
                      <label class="form-check-label" for="scheduleEnabled">Aktif</label>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-12">
                        <label class="form-label">Gunler</label>
                        <div class="d-flex flex-wrap gap-2">
                          <% const days = ['Pazar', 'Pazartesi', 'Sali', 'Carsamba', 'Persembe', 'Cuma', 'Cumartesi']; %>
                          <% days.forEach(function(day, idx) { %>
                            <div class="form-check">
                              <input class="form-check-input day-check" type="checkbox" value="<%= idx %>" id="day_<%= idx %>"
                                <%= typeof rule !== 'undefined' && rule && rule.scheduleDays && rule.scheduleDays.includes(idx) ? 'checked' : '' %>>
                              <label class="form-check-label" for="day_<%= idx %>"><%= day %></label>
                            </div>
                          <% }); %>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Baslangic Saati</label>
                        <input type="number" class="form-control" id="scheduleStartHour" value="<%= typeof rule !== 'undefined' && rule && rule.scheduleStartHour !== null ? rule.scheduleStartHour : '' %>" min="0" max="23" placeholder="0-23">
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Bitis Saati</label>
                        <input type="number" class="form-control" id="scheduleEndHour" value="<%= typeof rule !== 'undefined' && rule && rule.scheduleEndHour !== null ? rule.scheduleEndHour : '' %>" min="0" max="23" placeholder="0-23">
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Sag Panel -->
              <div class="col-lg-4">
                <div class="card position-sticky" style="top: 1rem;">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-info-circle me-2"></i>Hedefleme Rehberi</h5>
                  </div>
                  <div class="card-body">
                    <ul class="list-unstyled mb-0 small">
                      <li class="mb-2"><i class="ti ti-check text-success me-1"></i>Bos alanlar = Tum ziyaretciler</li>
                      <li class="mb-2"><i class="ti ti-check text-success me-1"></i>Yuksek oncelik = Once kontrol edilir</li>
                      <li class="mb-2"><i class="ti ti-check text-success me-1"></i>Birden fazla kural eslesirse oncelikli olan gosterilir</li>
                      <li class="mb-2"><i class="ti ti-check text-success me-1"></i>Sepet hedefleme cart sayfasinda calisir</li>
                    </ul>
                    <hr>
                    <h6>Ornek Senaryolar:</h6>
                    <ul class="small text-muted mb-0">
                      <li>Yeni ziyaretcilere hosgeldin popup'i</li>
                      <li>100TL+ sepete %10 indirim carki</li>
                      <li>Facebook reklamlarina ozel kampanya</li>
                      <li>Hafta sonu ozel cekilis</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    const ruleId = '<%= typeof rule !== "undefined" && rule ? rule.id : "" %>';

    function getCheckedValues(selector) {
      return Array.from(document.querySelectorAll(selector + ':checked')).map(el => el.value);
    }

    function parseList(value) {
      return value ? value.split(/[,\n]/).map(s => s.trim()).filter(s => s) : [];
    }

    async function saveRule() {
      const data = {
        name: document.getElementById('ruleName').value,
        gameId: document.getElementById('ruleGame').value,
        isActive: document.getElementById('ruleActive').checked,
        priority: parseInt(document.getElementById('rulePriority').value) || 0,

        pageType: getCheckedValues('.page-type-check'),
        pageUrls: parseList(document.getElementById('pageUrls').value),
        excludeUrls: parseList(document.getElementById('excludeUrls').value),

        devices: getCheckedValues('.device-check'),
        visitorType: document.getElementById('visitorType').value,

        trafficSource: getCheckedValues('.source-check'),
        utmSource: parseList(document.getElementById('utmSource').value),
        utmMedium: parseList(document.getElementById('utmMedium').value),
        utmCampaign: parseList(document.getElementById('utmCampaign').value),

        minCartValue: parseFloat(document.getElementById('minCartValue').value) || null,
        maxCartValue: parseFloat(document.getElementById('maxCartValue').value) || null,
        minCartItems: parseInt(document.getElementById('minCartItems').value) || null,
        maxCartItems: parseInt(document.getElementById('maxCartItems').value) || null,

        scheduleEnabled: document.getElementById('scheduleEnabled').checked,
        scheduleDays: getCheckedValues('.day-check').map(Number),
        scheduleStartHour: parseInt(document.getElementById('scheduleStartHour').value) || null,
        scheduleEndHour: parseInt(document.getElementById('scheduleEndHour').value) || null,
      };

      if (!data.name || !data.gameId) {
        showToast('Kural adi ve oyun zorunlu!', 'warning');
        return;
      }

      try {
        if (ruleId) {
          await api.put(`/api/targeting/${ruleId}`, data);
        } else {
          await api.post('/api/targeting', data);
        }
        showToast('Kural kaydedildi!', 'success');
        setTimeout(() => window.location.href = '/targeting', 1000);
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }
  </script>
</body>
</html>

