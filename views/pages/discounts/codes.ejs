<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Kodlar - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'codes' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h4><i class="ti ti-tag me-2"></i>Indirim Kodlari</h4>
              <button class="btn btn-outline-secondary"><i class="ti ti-download me-1"></i>Disa Aktar</button>
            </div>
            <div class="card">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-modern">
                    <thead><tr><th>Kod</th><th>Indirim</th><th>Durum</th><th>Tarih</th></tr></thead>
                    <tbody>
                      <% if (typeof discounts !== 'undefined' && discounts && discounts.length > 0) { %>
                        <% discounts.forEach(function(d) { %>
                          <tr>
                            <td><code><%= d.code %></code></td>
                            <td><%= d.type === 'PERCENTAGE' ? '%' + d.value : d.value + ' TL' %></td>
                            <td><span class="badge <%= d.status === 'ACTIVE' ? 'bg-success' : d.status === 'USED' ? 'bg-primary' : 'bg-secondary' %>"><%= d.status %></span></td>
                            <td><%= new Date(d.createdAt).toLocaleDateString('tr-TR') %></td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr><td colspan="4" class="text-center py-4 text-muted">Kod yok</td></tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
</body>
</html>
