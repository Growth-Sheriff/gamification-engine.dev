<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof rule !== 'undefined' && rule ? 'Kural Duzenle' : 'Yeni Kural' %> - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'rules' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1">
                  <i class="ti ti-<%= typeof rule !== 'undefined' && rule ? 'edit' : 'plus' %> me-2"></i>
                  <%= typeof rule !== 'undefined' && rule ? 'Kural Duzenle' : 'Yeni Kural' %>
                </h4>
                <p class="text-muted mb-0">Indirim kodu olusturma kurallari</p>
              </div>
              <div class="d-flex gap-2">
                <a href="/discounts/rules" class="btn btn-outline-secondary">
                  <i class="ti ti-arrow-left me-1"></i>Geri
                </a>
                <button type="button" class="btn btn-primary" onclick="saveRule()">
                  <i class="ti ti-device-floppy me-1"></i>Kaydet
                </button>
              </div>
            </div>

            <div class="row g-4">
              <!-- Sol Panel -->
              <div class="col-lg-8">
                <!-- Temel Bilgiler -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-info-circle me-2"></i>Temel Bilgiler</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label class="form-label">Kural Adi <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="ruleName" value="<%= typeof rule !== 'undefined' && rule ? rule.name : '' %>" required>
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Oyun</label>
                        <select class="form-select" id="ruleGame">
                          <option value="">Tum Oyunlar</option>
                          <% if (typeof games !== 'undefined' && games.length > 0) { %>
                            <% games.forEach(function(game) { %>
                              <option value="<%= game.id %>" <%= typeof rule !== 'undefined' && rule && rule.gameId === game.id ? 'selected' : '' %>>
                                <%= game.name %> (<%= game.type %>)
                              </option>
                            <% }); %>
                          <% } %>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Limitler -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-adjustments me-2"></i>Limitler</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-4">
                        <label class="form-label">Ziyaretci Basina Max Oyun</label>
                        <input type="number" class="form-control" id="maxPlaysPerVisitor" value="<%= typeof rule !== 'undefined' && rule ? rule.maxPlaysPerVisitor : 1 %>" min="1">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Bekleme Suresi (saat)</label>
                        <input type="number" class="form-control" id="cooldownHours" value="<%= typeof rule !== 'undefined' && rule ? rule.cooldownHours : 24 %>" min="0">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Kod Basina Kullanim</label>
                        <input type="number" class="form-control" id="maxRedemptionsPerCode" value="<%= typeof rule !== 'undefined' && rule ? rule.maxRedemptionsPerCode : 1 %>" min="1">
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Indirim Ayarlari -->
                <div class="card">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-discount me-2"></i>Indirim Ayarlari</h5>
                  </div>
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-md-4">
                        <label class="form-label">Gecerlilik Suresi (gun)</label>
                        <input type="number" class="form-control" id="validityDays" value="<%= typeof rule !== 'undefined' && rule ? rule.validityDays : 7 %>" min="1">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Min. Siparis Tutari (TL)</label>
                        <input type="number" class="form-control" id="minOrderAmount" value="<%= typeof rule !== 'undefined' && rule ? rule.minOrderAmount : 0 %>" min="0" step="0.01">
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Max. Indirim Tutari (TL)</label>
                        <input type="number" class="form-control" id="maxDiscountAmount" value="<%= typeof rule !== 'undefined' && rule ? rule.maxDiscountAmount : '' %>" min="0" step="0.01">
                        <small class="text-muted">Bos = Limit yok</small>
                      </div>
                    </div>
                    <hr>
                    <h6>Birlesim Kurallari</h6>
                    <div class="row g-3">
                      <div class="col-md-4">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="combineWithProductDiscount" <%= typeof rule !== 'undefined' && rule && rule.combineWithProductDiscount ? 'checked' : '' %>>
                          <label class="form-check-label" for="combineWithProductDiscount">Urun Indirimleri ile</label>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="combineWithOrderDiscount" <%= typeof rule !== 'undefined' && rule && rule.combineWithOrderDiscount ? 'checked' : '' %>>
                          <label class="form-check-label" for="combineWithOrderDiscount">Siparis Indirimleri ile</label>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" id="combineWithShipping" <%= typeof rule !== 'undefined' && rule && rule.combineWithShipping ? 'checked' : '' %>>
                          <label class="form-check-label" for="combineWithShipping">Kargo Indirimleri ile</label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Sag Panel -->
              <div class="col-lg-4">
                <!-- Durum -->
                <div class="card mb-4">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-toggle-left me-2"></i>Durum</h5>
                  </div>
                  <div class="card-body">
                    <div class="form-check form-switch mb-3">
                      <input class="form-check-input" type="checkbox" id="ruleActive" <%= typeof rule === 'undefined' || !rule || rule.isActive ? 'checked' : '' %>>
                      <label class="form-check-label" for="ruleActive">Aktif</label>
                    </div>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="requireEmail" <%= typeof rule !== 'undefined' && rule && rule.requireEmail ? 'checked' : '' %>>
                      <label class="form-check-label" for="requireEmail">Email Zorunlu</label>
                    </div>
                  </div>
                </div>

                <!-- Ozet -->
                <div class="card">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-list me-2"></i>Ozet</h5>
                  </div>
                  <div class="card-body">
                    <ul class="list-unstyled mb-0">
                      <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">Ziyaretci Limiti</span>
                        <strong id="summaryPlays">1 oyun</strong>
                      </li>
                      <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">Bekleme</span>
                        <strong id="summaryCooldown">24 saat</strong>
                      </li>
                      <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">Gecerlilik</span>
                        <strong id="summaryValidity">7 gun</strong>
                      </li>
                      <li class="d-flex justify-content-between py-2">
                        <span class="text-muted">Min. Siparis</span>
                        <strong id="summaryMinOrder">0 TL</strong>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    const ruleId = '<%= typeof rule !== "undefined" && rule ? rule.id : "" %>';

    // Update summary on input change
    document.querySelectorAll('input, select').forEach(input => {
      input.addEventListener('change', updateSummary);
      input.addEventListener('input', updateSummary);
    });

    function updateSummary() {
      document.getElementById('summaryPlays').textContent = document.getElementById('maxPlaysPerVisitor').value + ' oyun';
      document.getElementById('summaryCooldown').textContent = document.getElementById('cooldownHours').value + ' saat';
      document.getElementById('summaryValidity').textContent = document.getElementById('validityDays').value + ' gun';
      document.getElementById('summaryMinOrder').textContent = (document.getElementById('minOrderAmount').value || 0) + ' TL';
    }

    async function saveRule() {
      const data = {
        name: document.getElementById('ruleName').value,
        gameId: document.getElementById('ruleGame').value || null,
        isActive: document.getElementById('ruleActive').checked,
        requireEmail: document.getElementById('requireEmail').checked,
        maxPlaysPerVisitor: parseInt(document.getElementById('maxPlaysPerVisitor').value) || 1,
        cooldownHours: parseInt(document.getElementById('cooldownHours').value) || 24,
        maxRedemptionsPerCode: parseInt(document.getElementById('maxRedemptionsPerCode').value) || 1,
        validityDays: parseInt(document.getElementById('validityDays').value) || 7,
        minOrderAmount: parseFloat(document.getElementById('minOrderAmount').value) || 0,
        maxDiscountAmount: parseFloat(document.getElementById('maxDiscountAmount').value) || null,
        combineWithProductDiscount: document.getElementById('combineWithProductDiscount').checked,
        combineWithOrderDiscount: document.getElementById('combineWithOrderDiscount').checked,
        combineWithShipping: document.getElementById('combineWithShipping').checked,
      };

      if (!data.name) {
        showToast('Kural adi zorunlu!', 'warning');
        return;
      }

      try {
        await Rules.save(ruleId || null, data);
        setTimeout(() => window.location.href = '/discounts/rules', 1000);
      } catch (error) {
        console.error(error);
      }
    }

    // Init summary
    updateSummary();
  </script>
</body>
</html>

