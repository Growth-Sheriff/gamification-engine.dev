<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Entegrasyonlar - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../partials/sidebar', { active: 'integrations' }) %>
      <div class="layout-page">
        <%- include('../../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1"><i class="ti ti-plug me-2"></i>Entegrasyonlar</h4>
                <p class="text-muted mb-0">Dis servislerle baglanti kurun</p>
              </div>
            </div>

            <!-- Integrations Grid -->
            <div class="row g-4">
              <!-- Email Marketing -->
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <i class="ti ti-mail" style="font-size: 3rem; color: #7367f0;"></i>
                    </div>
                    <h5 class="card-title">Email Pazarlama</h5>
                    <p class="text-muted small mb-3">Klaviyo, Mailchimp veya Omnisend ile entegre edin</p>
                    <% if (typeof emailIntegration !== 'undefined' && emailIntegration && emailIntegration.isActive) { %>
                      <span class="badge bg-success mb-3"><i class="ti ti-check me-1"></i>Bagli</span>
                    <% } else { %>
                      <span class="badge bg-secondary mb-3">Bagli degil</span>
                    <% } %>
                    <br>
                    <a href="/integrations/email" class="btn btn-sm btn-outline-primary">
                      <i class="ti ti-settings me-1"></i>Yapilandir
                    </a>
                  </div>
                </div>
              </div>

              <!-- Analytics -->
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <i class="ti ti-chart-bar" style="font-size: 3rem; color: #28c76f;"></i>
                    </div>
                    <h5 class="card-title">Google Analytics</h5>
                    <p class="text-muted small mb-3">Oyun etkinliklerini GA4'e gonderin</p>
                    <span class="badge bg-secondary mb-3">Yakinda</span>
                    <br>
                    <button class="btn btn-sm btn-outline-secondary" disabled>
                      <i class="ti ti-settings me-1"></i>Yakinda
                    </button>
                  </div>
                </div>
              </div>

              <!-- Slack -->
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <i class="ti ti-brand-slack" style="font-size: 3rem; color: #ff9f43;"></i>
                    </div>
                    <h5 class="card-title">Slack Bildirimleri</h5>
                    <p class="text-muted small mb-3">Onemli olaylari Slack'e gonderin</p>
                    <span class="badge bg-secondary mb-3">Yakinda</span>
                    <br>
                    <button class="btn btn-sm btn-outline-secondary" disabled>
                      <i class="ti ti-settings me-1"></i>Yakinda
                    </button>
                  </div>
                </div>
              </div>

              <!-- Webhook -->
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <i class="ti ti-webhook" style="font-size: 3rem; color: #00cfe8;"></i>
                    </div>
                    <h5 class="card-title">Webhook</h5>
                    <p class="text-muted small mb-3">Kendi sistemlerinize veri gonderin</p>
                    <span class="badge bg-secondary mb-3">Yakinda</span>
                    <br>
                    <button class="btn btn-sm btn-outline-secondary" disabled>
                      <i class="ti ti-settings me-1"></i>Yakinda
                    </button>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <%- include('../../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
</body>
</html>

