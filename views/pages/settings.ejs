<%- include('../layouts/admin', { body: `

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">
      <i class="ti ti-settings me-2"></i>
      Ayarlar
    </h4>
    <p class="text-muted mb-0">Uygulama ayarlarını yönetin</p>
  </div>
</div>

<div class="row g-4">

  <!-- Shop Info -->
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Mağaza Bilgileri</h5>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center mb-4">
          <div class="avatar avatar-lg me-3">
            <span class="avatar-initial rounded bg-primary">
              ${ typeof shopDetails !== 'undefined' && shopDetails.name ? shopDetails.name.charAt(0).toUpperCase() : 'S' }
            </span>
          </div>
          <div>
            <h5 class="mb-0">${ typeof shopDetails !== 'undefined' ? shopDetails.name || 'Shop' : 'Shop' }</h5>
            <small class="text-muted">${ typeof shopDetails !== 'undefined' ? shopDetails.domain : '' }</small>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label text-muted small">Domain</label>
          <p class="mb-0">${ typeof shopDetails !== 'undefined' ? shopDetails.domain : '' }</p>
        </div>

        <div class="mb-3">
          <label class="form-label text-muted small">Email</label>
          <p class="mb-0">${ typeof shopDetails !== 'undefined' && shopDetails.email ? shopDetails.email : '-' }</p>
        </div>

        <div class="mb-0">
          <label class="form-label text-muted small">Durum</label>
          <p class="mb-0">
            <span class="badge badge-soft badge-soft-success">
              <i class="ti ti-check me-1"></i> Aktif
            </span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- API Info -->
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">API Bilgileri</h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label class="form-label text-muted small">Shopify API Versiyonu</label>
          <p class="mb-0"><code>2025-10</code></p>
        </div>

        <div class="mb-3">
          <label class="form-label text-muted small">App Proxy URL</label>
          <p class="mb-0"><code>https://gamification-engine.dev/api/proxy</code></p>
        </div>

        <div class="mb-0">
          <label class="form-label text-muted small">Widget Embed Code</label>
          <div class="bg-light rounded p-3">
            <code style="font-size: 0.75rem; word-break: break-all;">
              &lt;script src="https://gamification-engine.dev/widget.js" data-shop="${ typeof shopDetails !== 'undefined' ? shopDetails.domain : '' }"&gt;&lt;/script&gt;
            </code>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="col-12">
    <div class="card border-danger">
      <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0 text-white">
          <i class="ti ti-alert-triangle me-2"></i>
          Tehlikeli Bölge
        </h5>
      </div>
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-1">Tüm Verileri Sil</h6>
            <p class="text-muted mb-0 small">Tüm oyunlar, kurallar ve indirim kodları silinecek. Bu işlem geri alınamaz.</p>
          </div>
          <button type="button" class="btn btn-danger" onclick="if(confirm('Tüm verileri silmek istediğinize emin misiniz? Bu işlem geri alınamaz!')) alert('Bu özellik henüz aktif değil.')">
            <i class="ti ti-trash me-1"></i> Verileri Sil
          </button>
        </div>
      </div>
    </div>
  </div>

</div>

`, active: 'settings' }) %>

