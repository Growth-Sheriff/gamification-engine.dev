<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed" dir="ltr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ayarlar - Gamification Engine</title>
  <link rel="icon" type="image/x-icon" href="/assets/img/favicon/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@2.44.0/tabler-icons.min.css" />
  <link rel="stylesheet" href="/assets/css/core.css" />
</head>
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../partials/sidebar', { active: 'settings' }) %>
      <div class="layout-page">
        <%- include('../partials/navbar') %>
        <div class="content-wrapper">
          <div class="container-xxl flex-grow-1 container-p-y">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h4 class="mb-1"><i class="ti ti-settings me-2"></i>Ayarlar</h4>
                <p class="text-muted mb-0">Uygulama ayarlari ve entegrasyonlar</p>
              </div>
            </div>

            <div class="row g-4">
              <!-- Magaza Bilgileri -->
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-building-store me-2"></i>Magaza Bilgileri</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label class="form-label">Magaza Domain</label>
                      <input type="text" class="form-control" value="<%= typeof shop !== 'undefined' ? shop.domain : '' %>" disabled>
                      <small class="text-muted">Bu alan degistirilemez</small>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Magaza Adi</label>
                      <input type="text" class="form-control" id="shopName" value="<%= typeof shop !== 'undefined' ? shop.name : '' %>">
                    </div>
                    <div class="mb-3">
                      <label class="form-label">Email</label>
                      <input type="email" class="form-control" id="shopEmail" value="<%= typeof shop !== 'undefined' ? shop.email : '' %>">
                    </div>
                    <button class="btn btn-primary" onclick="saveShopSettings()">
                      <i class="ti ti-device-floppy me-1"></i>Kaydet
                    </button>
                  </div>
                </div>
              </div>

              <!-- Webhook URLs -->
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-webhook me-2"></i>Webhook URLs</h5>
                  </div>
                  <div class="card-body">
                    <div class="alert alert-soft-info">
                      <i class="ti ti-info-circle me-2"></i>
                      Bu URL'leri Shopify Partner Dashboard'da kullanin
                    </div>
                    <div class="mb-3">
                      <label class="form-label">App URL</label>
                      <div class="input-group">
                        <input type="text" class="form-control" value="https://gamification-engine.dev" readonly>
                        <button class="btn btn-outline-secondary" onclick="copyToClipboard(this)">
                          <i class="ti ti-copy"></i>
                        </button>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">OAuth Callback URL</label>
                      <div class="input-group">
                        <input type="text" class="form-control" value="https://gamification-engine.dev/auth/callback" readonly>
                        <button class="btn btn-outline-secondary" onclick="copyToClipboard(this)">
                          <i class="ti ti-copy"></i>
                        </button>
                      </div>
                    </div>
                    <div class="mb-3">
                      <label class="form-label">App Proxy URL</label>
                      <div class="input-group">
                        <input type="text" class="form-control" value="https://gamification-engine.dev/api/proxy" readonly>
                        <button class="btn btn-outline-secondary" onclick="copyToClipboard(this)">
                          <i class="ti ti-copy"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Genel Ayarlar -->
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-header">
                    <h5 class="mb-0"><i class="ti ti-adjustments me-2"></i>Genel Ayarlar</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="enableEmails" checked>
                        <label class="form-check-label" for="enableEmails">Email Bildirimleri</label>
                      </div>
                      <small class="text-muted">Kazanilan indirim kodlari email ile gonderilsin</small>
                    </div>
                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="requireEmail">
                        <label class="form-check-label" for="requireEmail">Email Zorunlu</label>
                      </div>
                      <small class="text-muted">Oyun oynamak icin email gerekli olsun</small>
                    </div>
                    <div class="mb-3">
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="showOnMobile" checked>
                        <label class="form-check-label" for="showOnMobile">Mobilde Goster</label>
                      </div>
                      <small class="text-muted">Oyunlar mobil cihazlarda da gosterilsin</small>
                    </div>
                    <button class="btn btn-primary" onclick="saveGeneralSettings()">
                      <i class="ti ti-device-floppy me-1"></i>Kaydet
                    </button>
                  </div>
                </div>
              </div>

              <!-- Tehlikeli Bolge -->
              <div class="col-lg-6">
                <div class="card border-danger">
                  <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="ti ti-alert-triangle me-2"></i>Tehlikeli Bolge</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <h6>Tum Verileri Sil</h6>
                      <p class="text-muted mb-2">Tum oyun kayitlari, indirim kodlari ve analitik veriler silinir. Bu islem geri alinamaz!</p>
                      <button class="btn btn-outline-danger" onclick="confirmDeleteAllData()">
                        <i class="ti ti-trash me-1"></i>Tum Verileri Sil
                      </button>
                    </div>
                    <hr>
                    <div>
                      <h6>Uygulamayi Kaldir</h6>
                      <p class="text-muted mb-2">Uygulamayi magazanizdan kaldirmak icin Shopify Admin panelinden yapabilirsiniz.</p>
                      <a href="https://<%= typeof shop !== 'undefined' ? shop.domain : '' %>/admin/apps" target="_blank" class="btn btn-outline-secondary">
                        <i class="ti ti-external-link me-1"></i>Shopify Admin
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <%- include('../partials/footer') %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/menu.js"></script>
  <script src="/assets/js/app.js"></script>
  <script>
    function copyToClipboard(btn) {
      const input = btn.closest('.input-group').querySelector('input');
      navigator.clipboard.writeText(input.value);
      showToast('Kopyalandi!', 'success');
    }

    async function saveShopSettings() {
      const data = {
        name: document.getElementById('shopName').value,
        email: document.getElementById('shopEmail').value,
      };

      try {
        await Settings.save(data);
      } catch (error) {
        console.error(error);
      }
    }

    async function saveGeneralSettings() {
      const data = {
        enableEmails: document.getElementById('enableEmails').checked,
        requireEmail: document.getElementById('requireEmail').checked,
        showOnMobile: document.getElementById('showOnMobile').checked,
      };

      try {
        await api.put('/api/settings/general', data);
        showToast('Ayarlar kaydedildi!', 'success');
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }

    function confirmDeleteAllData() {
      if (confirm('TUM VERILER SILINECEK! Bu islem geri alinamaz. Devam etmek istiyor musunuz?')) {
        if (confirm('EMIN MISINIZ? Bu islem tum oyun kayitlarini, indirim kodlarini ve analitik verileri silecek!')) {
          deleteAllData();
        }
      }
    }

    async function deleteAllData() {
      try {
        await api.delete('/api/data/all');
        showToast('Tum veriler silindi!', 'success');
        setTimeout(() => location.reload(), 1500);
      } catch (error) {
        showToast('Hata: ' + error.message, 'danger');
      }
    }
  </script>
</body>
</html>

