# Environment Variables
NODE_ENV=development

# Server
PORT=3000
HOST=localhost

# App URL
APP_URL=https://your-domain.com

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# Shopify App Credentials
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_customers,write_customers,read_orders,write_discounts,read_discounts

# Shopify API Version (2025-10)
SHOPIFY_API_VERSION=2025-10

# Session Secret
SESSION_SECRET=your_session_secret_here

# Test Store (Development) - Optional
# TEST_STORE_DOMAIN=your-store.myshopify.com
# TEST_STORE_ACCESS_TOKEN=your_access_token_here

